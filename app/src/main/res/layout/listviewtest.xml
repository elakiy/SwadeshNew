<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:gravity="center_vertical">

        <TextView
            android:padding="5dp"
            android:layout_marginLeft="20dp"
            android:text="jenfkjelk"
            android:id="@+id/brand_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
        <ImageView
            android:id="@+id/dropdown_id"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/dropdown"
            android:layout_alignEnd="@+id/brand_name"
            android:layout_alignRight="@+id/brand_name"/>

    <RelativeLayout
        android:id="@+id/rel_id"
        android:layout_below="@+id/dropdown_id"
        android:visibility="visible"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
    <ListView
        android:layout_below="@+id/ll_id"
        android:id="@+id/categorylist"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>
    </RelativeLayout>
</RelativeLayout>