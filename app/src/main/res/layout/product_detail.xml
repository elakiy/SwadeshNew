<?xml version="1.0" encoding="utf-8"?>
<com.sothree.slidinguppanel.SlidingUpPanelLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:sothree="http://schemas.android.com/apk/res-auto"
    android:id="@+id/sliding_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="bottom"
    sothree:umanoPanelHeight="68dp"
    sothree:umanoShadowHeight="4dp"
    sothree:umanoParallaxOffset="100dp"
    sothree:umanoDragView="@+id/dragView"
    sothree:umanoOverlay="true"
    sothree:umanoScrollableView="@+id/list">
<FrameLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="#fff">

    <ScrollView
        android:id="@+id/scroll"
        android:layout_above="@+id/ll_id"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
            <LinearLayout
                android:id="@+id/LL_layout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_margin="10dp"
                    android:background="#fff"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">
                <RelativeLayout
                        android:id="@+id/linearviewpager_id"
                        android:layout_width="match_parent"
                        android:layout_height="172dp"
                        android:orientation="vertical">

                    <com.santalu.autoviewpager.AutoViewPager
                        android:id="@+id/viewpager_id"
                        android:layout_width="361dp"
                        android:layout_height="wrap_content"
                        app:avp_autoScroll="true"
                        app:avp_duration="3000"
                        app:avp_indeterminate="true" />
                        <com.rd.PageIndicatorView
                            android:id="@+id/indicator"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentBottom="true"
                            android:layout_centerHorizontal="true"
                            android:padding="16dp"
                            app:piv_selectedColor="@color/colorAccent"
                            app:piv_unselectedColor="@color/colorPrimary"
                            app:piv_viewPager="@+id/view_pager_id"/>
                    </RelativeLayout>
                </LinearLayout>
                <TextView
                    android:id="@+id/Name_tv"
                    android:gravity="center"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Control Gear"
                    android:padding="8dp"
                    android:textStyle="bold"
                    android:textSize="20sp"
                    android:textColor="@color/colorPrimary"/>
                <LinearLayout
                    android:gravity="center"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">
                    <TextView
                        android:id="@+id/itemname_tv"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="MXv Gears"
                        android:textSize="16sp"
                        android:textColor="#000"/>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_margin="10dp"
                    android:layout_gravity="start">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Size:   "
                        android:textSize="15dp"
                        android:textStyle="bold"
                        android:textColor="#0a600b"/>
                    <TextView
                        android:id="@+id/quantity_tv"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Item Quantity"
                        android:textSize="15dp"
                        android:textStyle="bold"
                        android:textColor="#0ab90c"/>

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="end">
                            <ImageView
                                android:id="@+id/rs_id"
                                android:layout_marginTop="5dp"
                                android:layout_width="15dp"
                                android:layout_height="13dp"
                                android:src="@drawable/rupee_black"/>
                        <TextView
                            android:id="@+id/price_tv"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="250"
                            android:layout_toRightOf="@+id/rs_id"
                            android:textSize="15sp"
                            android:textColor="#000"
                            android:layout_gravity="start"/>
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="/-"
                            android:layout_toRightOf="@+id/price_tv"
                            android:textSize="15sp"
                            android:textColor="#000"
                            android:layout_gravity="start"
                            android:gravity="end"/>
                    </RelativeLayout>
                </LinearLayout>
                <TextView
                    android:id="@+id/description_tv"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="10dp"
                    android:text="vjafhasfnascnsabcskacaskcnascsabcmh"/>
                <include
                    layout="@layout/spectable"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">
                </include>
                <Space
                    android:layout_width="match_parent"
                    android:layout_height="100dp" />
            </LinearLayout>
    </ScrollView>
    <include
        android:visibility="gone"
        android:layout_above="@+id/no_internet"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        layout="@layout/progressbar"/>
    <include
        layout="@layout/refresh"></include>
</RelativeLayout>
</FrameLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#ffffff"
        android:orientation="vertical"
        android:clickable="true"
        android:focusable="false"
        android:id="@+id/dragView">
        <ImageView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:src="@drawable/swipeup"/>
        <TextView
            android:layout_marginTop="3dp"
            android:gravity="center"
            android:textColor="#000"
            android:textSize="16sp"
            android:textStyle="bold"
            android:layout_gravity="center"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Specification List"/>
        <include
            layout="@layout/webview"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"></include>
    </LinearLayout>
</com.sothree.slidinguppanel.SlidingUpPanelLayout>

