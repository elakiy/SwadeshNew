<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <ScrollView
        android:id="@+id/textLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <LinearLayout
                android:id="@+id/ll1"
                android:layout_margin="20dp"
                android:layout_width="wrap_content"
                android:layout_height="30dp"
                android:orientation="horizontal">
                <TextView
                    android:id="@+id/profiletext_id"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="User Name : "
                    android:textSize="18sp"
                    android:textColor="#000"/>
                <TextView
                    android:id="@+id/name_id"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Name"
                    android:textSize="18sp"
                    android:textColor="#000"/>
            </LinearLayout>
            <View
                android:id="@+id/view1_Id"
                android:layout_width="match_parent"
                android:layout_height="0.5dp"
                android:layout_below="@+id/ll1"
                android:background="#e7e2e2"/>
            <ImageView
                android:id="@+id/email_icon"
                android:layout_below="@+id/view1_Id"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:src="@drawable/blue_emailicon"
                android:layout_margin="20dp"/>
            <LinearLayout
                android:id="@+id/ll11"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_below="@+id/view1_Id"
                android:layout_toRightOf="@+id/email_icon"
                android:layout_margin="20dp">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Email"
                    android:textColor="#000"
                    android:textSize="15sp"/>
                <TextView
                    android:id="@+id/email_id"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="appi@gmail.com"
                    android:layout_marginTop="5dp"/>
            </LinearLayout>
            <ImageView
                android:id="@+id/phone_icon"
                android:layout_below="@+id/email_icon"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:src="@drawable/blue_phoneicon"
                android:layout_margin="20dp"/>
            <LinearLayout
                android:id="@+id/ll2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_below="@+id/ll11"
                android:layout_toRightOf="@+id/phone_icon"
                android:layout_margin="20dp">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Phone Number"
                    android:textColor="#000"
                    android:textSize="15sp"/>
                <TextView
                    android:id="@+id/mobile_id"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    android:text="8970009878"/>
            </LinearLayout>

            <ImageView
                android:id="@+id/signout_icon"
                android:layout_below="@id/ll2"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:src="@drawable/blue_signouticon"
                android:layout_margin="20dp"/>
            <LinearLayout
                android:id="@+id/changepass_id"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_below="@id/ll2"
                android:layout_toRightOf="@id/signout_icon"
                android:layout_margin="20dp">

                <TextView
                    android:id="@+id/signout_textId"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Change password"
                    android:textColor="#000"
                    android:textSize="15sp" />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    android:text="* * * * * * *"/>
            </LinearLayout>
            <ImageView
                android:id="@+id/invite_icon"
                android:layout_below="@id/changepass_id"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:src="@drawable/blue_shareicon"
                android:layout_margin="20dp"/>
            <LinearLayout
                android:id="@+id/ll4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_below="@id/signout_icon"
                android:layout_toRightOf="@id/invite_icon"
                android:layout_margin="20dp">
                <TextView
                    android:id="@+id/invite_Id"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Invite Friends"
                    android:textColor="#000"
                    android:textSize="15sp"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    android:text="invite your friends"/>
            </LinearLayout>
            <View
                android:id="@+id/viewid"
                android:layout_below="@+id/ll4"
                android:layout_width="match_parent"
                android:layout_height="20dp"></View>
            <View
                android:layout_below="@+id/viewid"
                android:id="@+id/view2_Id"
                android:layout_width="match_parent"
                android:layout_height="0.5dp"
                android:background="#e7e2e2"/>
            <TextView
                android:id="@+id/infoText_Id"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/view2_Id"
                android:text="Information"
                android:textColor="#000"
                android:textSize="15sp"
                android:layout_marginTop="10dp"
                android:layout_marginLeft="20dp"/>
            <LinearLayout
                android:id="@+id/linear_feedback"
                android:layout_below="@id/infoText_Id"
                android:layout_width="match_parent"
                android:orientation="horizontal"
                android:layout_height="wrap_content">
                <ImageView
                    android:id="@+id/help_icon"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:src="@drawable/blue_helpicon"
                    android:layout_margin="20dp"/>
                <TextView
                    android:id="@+id/feedbackText_Id"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Help and Feddback"
                    android:textColor="#000"
                    android:textSize="15sp"
                    android:layout_margin="20dp"/>
            </LinearLayout>
            <LinearLayout
                android:id="@+id/linear_contact"
                android:layout_below="@+id/linear_feedback"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <ImageView
                    android:id="@+id/contact_icon"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:src="@drawable/blue_contacticon"
                    android:layout_margin="20dp"/>
                <TextView
                    android:id="@+id/Contactus_Id"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Contact Us"
                    android:textColor="#000"
                    android:textSize="15sp"
                    android:layout_margin="20dp"/>
            </LinearLayout>
        </RelativeLayout>
    </ScrollView>

    <LinearLayout
        android:id="@+id/ll_change_pass"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_marginTop="30dp"
        android:orientation="vertical"
        android:visibility="gone">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:gravity="center"
            android:text="Change Your Password"
            android:textColor="@color/colorPrimary"
            android:textSize="20dp" />

        <android.support.design.widget.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <EditText
                android:id="@+id/et_curr_pass"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginRight="10dp"
                android:hint="current Password"
                android:inputType="textPassword"
                android:maxEms="20"
                android:minEms="6"
                android:paddingLeft="10dp" />
        </android.support.design.widget.TextInputLayout>


        <android.support.design.widget.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <EditText
                android:id="@+id/et_new_pass"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginRight="10dp"
                android:hint="New Password"
                android:inputType="textPassword"
                android:maxEms="20"
                android:minEms="6"
                android:paddingLeft="10dp" />

        </android.support.design.widget.TextInputLayout>


        <android.support.design.widget.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <EditText
                android:id="@+id/et_conf_password"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginRight="10dp"
                android:hint=" Confirm Password"
                android:inputType="textPassword"
                android:maxEms="20"
                android:minEms="6"
                android:paddingLeft="10dp" />

        </android.support.design.widget.TextInputLayout>
        <Button
            android:id="@+id/btn_change_pass"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="30dp"
            android:layout_marginRight="30dp"
            android:layout_marginTop="50dp"
            android:backgroundTint="@color/colorPrimary"
            android:text="Change Password"
            android:textColor="@color/colorWhite"
            android:textSize="15dp" />
    </LinearLayout>
</LinearLayout>