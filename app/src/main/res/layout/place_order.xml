<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">
<ScrollView
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <Button
                android:layout_margin="15dp"
                android:id="@+id/submit_id"
                android:gravity="center"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Place your order"
                android:textAllCaps="false"
                android:textColor="#fff"
                android:layout_weight="1"
                android:background="@drawable/bgnew"
                android:textSize="20dp" />
        <LinearLayout
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp"
            android:background="#fff"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
        <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Order Summary"
                android:textColor="#000"
                android:textStyle="bold"
                android:textSize="18sp"
                android:layout_marginTop="10dp"
                android:layout_marginLeft="10dp"/>
            <android.support.v7.widget.RecyclerView
                android:layout_margin="10dp"
                android:id="@+id/itemsforbuy_id"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
            </android.support.v7.widget.RecyclerView>
            <TableLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
               <TableRow android:layout_margin="3dp">
                   <TextView
                       android:layout_marginLeft="15dp"
                       android:layout_marginRight="15dp"
                       android:layout_width="wrap_content"
                       android:layout_height="wrap_content"
                       android:text="items :"
                       android:textSize="18sp"
                       android:textColor="@color/colorBlack"/>
                   <TextView
                       android:id="@+id/items_id"
                       android:gravity="end"
                       android:layout_weight="1"
                       android:layout_marginLeft="15dp"
                       android:layout_marginRight="15dp"
                       android:layout_width="wrap_content"
                       android:layout_height="wrap_content"
                       android:text="0.00"
                       android:textSize="18sp"
                       android:textColor="@color/colorBlack" />
               </TableRow>
                <TableRow android:layout_margin="3dp">
                    <TextView
                        android:layout_marginLeft="15dp"
                        android:layout_marginRight="15dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Delivery :"
                        android:textSize="18sp"
                        android:textColor="@color/colorPrimary"/>
                    <TextView
                        android:id="@+id/delivery_id"
                        android:gravity="end"
                        android:layout_weight="1"
                        android:layout_marginLeft="15dp"
                        android:layout_marginRight="15dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="0.00"
                        android:textSize="18sp"
                        android:textColor="@color/colorBlack" />
                </TableRow>
                <TableRow android:layout_margin="3dp">
                    <TextView
                        android:layout_marginLeft="15dp"
                        android:layout_marginRight="15dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Order Total :"
                        android:textStyle="bold"
                        android:textSize="18sp"
                        android:textColor="@color/colorBlack"/>
                    <TextView
                        android:id="@+id/ordertotal_id"
                        android:gravity="end"
                        android:layout_weight="1"
                        android:layout_marginLeft="15dp"
                        android:layout_marginRight="15dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="0.00"
                        android:textSize="18sp"
                        android:textColor="@color/colorBlack" />
                </TableRow>
            </TableLayout>
        </LinearLayout>
            <TextView
                android:textStyle="bold"
                android:text="Shipping Details"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="#000"
                android:textSize="18sp"
                android:layout_marginTop="30dp"
                android:layout_marginLeft="10dp"/>
        <android.support.v7.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            app:cardElevation="5dp"
            android:foreground="?android:attr/selectableItemBackground"
            app:cardBackgroundColor="#fff"
            app:cardCornerRadius="5dp">
        <RelativeLayout
            android:background="#fff"
            android:layout_margin="10dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
            <TextView
                android:id="@+id/name_id"
                android:layout_margin="3dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Elakiya"
                android:textStyle="bold"
                android:textSize="18sp"
                android:textColor="@color/colorBlack"/>
            <LinearLayout
                android:layout_below="@+id/name_id"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
            <LinearLayout
                android:layout_weight="1"
                android:orientation="horizontal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
            <TextView
                android:id="@+id/address_id"
                android:layout_margin="3dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="#432,"
                android:textSize="18sp"
                android:textColor="@color/colorBlack"/>
            <TextView
                android:id="@+id/landmark_id"
                android:layout_margin="3dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="2nd main,"
                android:textSize="18sp"
                android:textColor="@color/colorBlack" />
            <TextView
                android:id="@+id/locality_id"
                android:layout_margin="3dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="5th cross anandpura"
                android:textSize="18sp"
                android:textColor="@color/colorBlack" />
                <TextView
                    android:text="............"
                    android:layout_margin="3dp"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:textSize="18sp"
                    android:textColor="@color/colorBlack"/>
            </LinearLayout>
                <ImageView
                    android:id="@+id/viewmore_address"
                    android:src="@drawable/viewmore"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
            </LinearLayout>
            </LinearLayout>
        </RelativeLayout>
        </android.support.v7.widget.CardView>
        <TextView
            android:textStyle="bold"
            android:text="Payment information"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="#000"
            android:textSize="18sp"
            android:layout_marginTop="30dp"
            android:layout_marginLeft="10dp"/>
        <android.support.v7.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            app:cardElevation="5dp"
            android:foreground="?android:attr/selectableItemBackground"
            app:cardBackgroundColor="#fff"
            app:cardCornerRadius="5dp">
            <RelativeLayout
                android:background="#fff"
                android:layout_margin="10dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:id="@+id/paymentmthd_id"
                    android:layout_margin="3dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Payment method"
                    android:textStyle="bold"
                    android:textSize="18sp"
                    android:textColor="@color/colorBlack"/>
                <LinearLayout
                    android:layout_below="@+id/paymentmthd_id"
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <LinearLayout
                        android:layout_weight="1"
                        android:orientation="horizontal"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content">
                        <TextView
                            android:id="@+id/optiontype_id"
                            android:layout_margin="3dp"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Pay on delivery(Cash/Card)"
                            android:textSize="18sp"
                            android:textColor="@color/colorBlack"/>
                    </LinearLayout>
                    <ImageView
                        android:id="@+id/viewmore_paymentmthd"
                        android:src="@drawable/viewmore"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />
                </LinearLayout>
            </RelativeLayout>
        </android.support.v7.widget.CardView>
    </LinearLayout>
    </RelativeLayout>
</ScrollView>
</android.support.constraint.ConstraintLayout>